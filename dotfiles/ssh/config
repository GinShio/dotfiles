Include config.d/*.conf

Host *
    # Connection Multiplexing (Speed boost for multiple sessions)
    ControlMaster auto
    ControlPath ~/.ssh/control-%C
    ControlPersist 10m

    # Keep connection alive
    ServerAliveInterval 60

    # Modern & Fast Crypto
    # Prioritize Curve25519 (Fastest ECDH)
    KexAlgorithms curve25519-sha256,curve25519-sha256@libssh.org,diffie-hellman-group-exchange-sha256,ecdh-sha2-nistp256,ecdh-sha2-nistp384,ecdh-sha2-nistp521
    # Prioritize AEAD ciphers (Chacha20 / AES-GCM)
    Ciphers chacha20-poly1305@openssh.com,aes256-gcm@openssh.com,aes256-ctr,aes192-ctr
    # Prioritize Encrypt-then-MAC
    MACs hmac-sha2-512-etm@openssh.com,hmac-sha2-256-etm@openssh.com,hmac-sha2-512,hmac-sha2-256
