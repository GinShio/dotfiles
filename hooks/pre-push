#!/usr/bin/env bash
export HOOK_NAME=pre-push
source $(git rev-parse --git-common-dir)/hooks/common.sh

if [[ $CURRENT_BRANCH =~ $PROTECTED_BRANCH ]]; then
    echo >&2 "Never push code directly to the protected branch ($CURRENT_BRANCH)!"
    exit 1
fi

push_command=$(ps -ocommand= -p $PPID)
if [[ $push_command =~ $FORCE_PUSH_CMD ]]; then
    echo "Think before you type."
    $(prompt-to-confirm)
    status=$?
    if [ $status -ne 0 ]; then
        echo "Abort..."
        exit $status
    fi
fi

find-program git-lfs
git lfs pre-push "$@"
